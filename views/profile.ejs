<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <title>Profile</title>

    <!-- Favicon -->
    <!-- <link rel="shortcut icon" href="favicon.ico">
    <link rel="icon" href="favicon.ico" type="image/x-icon"> -->

    <!-- Custom CSS -->
    <link href="/dist/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/css/reg.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <!-- HK Wrapper -->
    <div class="hk-wrapper">
      <!-- Main Content -->
      <div class="hk-pg-wrapper hk-auth-wrapper">
        <div class="container-fluid">
          <p
            style="
              color: red;
              font-family: Helvetica, Arial, sans-serif;
              font-size: 13px;
              font-weight: bold;
              line-height: 20px;
              text-shadow: 1px 1px rgba(250, 250, 250, 0.3);
            "
          ></p>
          <div class="auth-form-wrap py-50 h-100">
            <div class="auth-form w-xxl-65 w-xl-75 w-sm-90 w-xs-100">
              <div class="container">
                <div class="row">
                  <div style="display: flex" class="col-8 mb-3">
                    <img
                      style="width: 50px"
                      src="/images/user.png"
                      alt="user"
                      class="avatar-img rounded-circle p-1 mr-3"
                    />
                    <h1 class="display-4" style="color: #f46b68">
                      Hi ! Roberto
                    </h1>
                  </div>
                  <div class="col-4">
                    <button
                      id="edit"
                      onclick="editinfo()"
                      class="float-right btn btn-block"
                      style="width: 20%; background-color: #f46b68; color: #fff"
                    >
                      Edit
                    </button>
                    <button
                      onclick="cancelinfo()"
                      id="cancel"
                      class="float-right btn btn-secondary mr-2"
                      style="
                        display: none;
                        color: #fff;
                      "
                    >
                      Cancel
                    </button>
                    <button
                      onclick="saveinfo()"
                      id="save"
                      class="float-right btn btn-primary mr-2"
                      style="
                        display: none;
                        color: #fff;
                      "
                    >
                      Save
                    </button>
                  </div>
                </div>
                <!-- <p class="mb-30">Signup to find your health buddy.</p> -->
                <form id="prof" action="/register/member" method="POST">
                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">First Name</label>
                      <input
                        class="form-control"
                        placeholder="Enter your first name"
                        type="text"
                        name="fName"
                      />
                    </div>
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Last Name</label>
                      <input
                        class="form-control"
                        placeholder="Enter your last name"
                        type="text"
                        name="lName"
                      />
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Date of Birth</label>
                      <input class="form-control" type="date" name="dob" />
                    </div>
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Postal Code</label>
                      <input class="form-control" type="text" name="postal" />
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Email Address</label>
                      <input
                        class="form-control"
                        placeholder="Email"
                        type="email"
                        name="username"
                      />
                    </div>
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Mobile Number</label>
                      <input
                        class="form-control"
                        placeholder="Mobile Number"
                        type="tel"
                        name="mobile"
                      />
                    </div>
                  </div>
                  <div class="row mx-0" id="divCheckPasswordMatch"></div>
                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Password</label>
                      <input
                        class="form-control"
                        onkeyup="active()"
                        name="password"
                        id="pswrd_1"
                        type="password"
                        placeholder="Enter Password"
                      />
                    </div>
                    <div class="form-group col-xs col-6 px-auto">
                      <label class="mb-5">Confirm Password</label>
                      <input
                        class="form-control"
                        onkeyup="active_2()"
                        name="password2"
                        id="pswrd_2"
                        type="password"
                        placeholder="Confirm Password"
                      />
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col px-auto">
                      <div class="row mx-0">
                        <label class="mb-5">What are you interested in?</label>
                      </div>
                      <div class="row mx-0">
                        <div class="custom-control custom-checkbox col">
                          <input
                            class=""
                            type="checkbox"
                            value="friend"
                            name="check1"
                            id="qfriend"
                          />
                          <label class="">&nbsp; Matching</label>
                        </div>
                        <div class="custom-control custom-checkbox col-5">
                          <input
                            class=""
                            type="checkbox"
                            value="professional"
                            name="check2"
                            id="qprof"
                          />
                          <label class="">&nbsp; Magazine</label>
                        </div>
                        <div class="custom-control custom-checkbox col">
                          <input
                            class=""
                            type="checkbox"
                            value="product"
                            name="check3"
                            id="qprod"
                          /><label class="">&nbsp; Groups</label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 p-10 px-auto">
                      <label class="mb-5">Gender</label>
                      <select
                        class="form-control custom-select"
                        name="healthIssue"
                      >
                        <option selected disabled value="">-- Select --</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Others</option>
                      </select>
                    </div>
                    <div class="form-group col-xs col-6 p-10 px-auto">
                      <label class="mb-5">Marital Status</label>
                      <select
                        class="form-control custom-select"
                        name="maritialStatus"
                      >
                        <option selected disabled value="">-- Select --</option>
                        <option value="Married">Married</option>
                        <option value="Single">Single</option>
                      </select>
                    </div>
                  </div>

                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 p-10 px-auto">
                      <label class="mb-5">Health Issues</label>
                      <select
                        id="other1"
                        onchange="other_1()"
                        class="form-control custom-select"
                        name="healthIssue"
                      >
                        <option selected disabled value="">-- Select --</option>
                        <option>Cancer</option>
                        <option>Heart disease</option>
                        <option>Mental Health</option>
                        <option>Stroke</option>
                        <option>Respiratory Disease</option>
                        <option>Diabetes</option>
                        <option>Alzhemiers</option>
                        <option>Dementia</option>
                        <option>Parkinson’s</option>
                        <option>Pneumonia</option>
                        <option>Liver disease</option>
                        <option>Kidney disease</option>
                        <option>Viruses</option>
                        <option>Multiple Sclerosis</option>
                        <option>Epilepsy</option>
                        <option>Osteoporosis</option>
                        <option>Hypertension</option>
                        <option>Other</option>
                      </select>
                      <div id="otherdiv1" class="row mx-0">
                        <div class="form-group col-xs col px-auto py-2">
                          <label class="text-muted mb-5"
                            >If Selected Other : Please Specify</label
                          >
                          <input
                            class="form-control"
                            type="text"
                            name="health_issue_other"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="form-group col-6 p-10 px-auto">
                      <label class="mb-5">Personal Intrests</label>
                      <select
                        id="other2"
                        class="form-control custom-select"
                        name="personalIntrest"
                        onchange="other_2()"
                      >
                        <option selected disabled value="">-- Select --</option>
                        <option>Health & Fitness</option>
                        <option>Music</option>
                        <option>Travelling</option>
                        <option>Sport</option>
                        <option>Reading</option>
                        <option>Socialising</option>
                        <option>Walking/Hiking</option>
                        <option>Art</option>
                        <option>Gardening</option>
                        <option>Food/Drink</option>
                        <option>Photography</option>
                        <option>Beauty/Cosmetics</option>
                        <option>Cooking</option>
                        <option>Drama</option>
                        <option>Fashion</option>
                        <option>Gaming</option>
                        <option>Languages</option>
                        <option>Collecting</option>
                        <option>Games/Puzzles</option>
                        <option>Creative Writing</option>
                        <option>Other</option>
                      </select>
                      <div id="otherdiv2" class="row mx-0">
                        <div class="form-group col-xs col px-auto py-2">
                          <label class="text-muted mb-5"
                            >If Selected Other : Please Specify</label
                          >
                          <input
                            class="form-control"
                            type="text"
                            name="personal_interest_other"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col-xs col-6 p-10 px-auto">
                      <label class="mb-5">Date of Diagnosis</label>
                      <input class="form-control" type="date" name="dod" />
                    </div>
                    <div class="form-group col-xs col-6 p-10 px-auto">
                      <label class="mb-5">Stage of Ilness</label>
                      <select class="form-control custom-select" name="stage">
                        <option selected disabled value="">-- Select --</option>
                        <option value="Recently diagnosed">
                          Recently diagnosed
                        </option>
                        <option value="Having treatment">
                          Having treatment
                        </option>
                        <option value="In recovery">In recovery</option>
                        <option value="Recovered">Recovered</option>
                      </select>
                    </div>
                  </div>
                  <div class="row mx-0 mb-3">
                    <div class="form-group col-lg-7 px-auto mb-0">
                      <div class="custom-control custom-checkbox">
                        <input
                          class=""
                          type="checkbox"
                          value="Willing to provide details of your story?"
                          name="check4"
                          id="check4"
                          onchange="togRadios1()"
                        />
                        <label class=""
                          >&nbsp; Willing to provide details of your
                          story?</label
                        >
                      </div>
                    </div>
                    <div id="rGroup1" class="form-group col-lg-5 px-auto">
                      <div class="d-inline-block custom-control custom-radio">
                        <input
                          type="radio"
                          id="mobRadio1"
                          name="customRadio1"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="mobRadio1"
                          >Mobile</label
                        >
                      </div>
                      <div class="d-inline-block custom-control custom-radio">
                        <input
                          type="radio"
                          id="emailRadio1"
                          name="customRadio1"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="emailRadio1"
                          >Email</label
                        >
                      </div>
                      <div class="d-inline-block custom-control custom-radio">
                        <input
                          type="radio"
                          id="bothRadio1"
                          name="customRadio1"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="bothRadio1"
                          >Both</label
                        >
                      </div>
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col px-auto">
                      <div class="custom-control custom-checkbox">
                        <input
                          class=""
                          type="checkbox"
                          value="Interested in receiving notifications?"
                          name="check5"
                          id="check5"
                        />
                        <label class=""
                          >&nbsp; Interested in receiving notifications?</label
                        >
                      </div>
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col px-auto">
                      <div class="custom-control custom-checkbox">
                        <input
                          class=""
                          type="checkbox"
                          value="Do you agree for your details to be stored securely?"
                          name="check6"
                          id="check6"
                        />
                        <label class=""
                          >&nbsp; Do you agree for your details to be stored
                          securely?</label
                        >
                      </div>
                    </div>
                  </div>
                  <div class="row mx-0">
                    <div class="form-group col-lg-7 px-auto mb-0">
                      <div class="custom-control custom-checkbox">
                        <input
                          class=""
                          type="checkbox"
                          value="Are you happy to be contacted by us?"
                          name="check7"
                          id="check7"
                          onchange="togRadios2()"
                        />
                        <label class=""
                          >&nbsp; Are you happy to be contacted by us?</label
                        >
                      </div>
                    </div>
                    <div id="rGroup2" class="form-group col-lg-5 px-auto">
                      <div class="d-inline-block custom-control custom-radio">
                        <input
                          type="radio"
                          id="mobRadio2"
                          name="customRadio2"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="mobRadio2"
                          >Mobile</label
                        >
                      </div>
                      <div class="d-inline-block custom-control custom-radio">
                        <input
                          type="radio"
                          id="emailRadio2"
                          name="customRadio2"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="emailRadio2"
                          >Email</label
                        >
                      </div>
                      <div class="d-inline-block custom-control custom-radio">
                        <input
                          type="radio"
                          id="bothRadio2"
                          name="customRadio2"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="bothRadio2"
                          >Both</label
                        >
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- </div>
                </div> -->
        </div>
      </div>
      <!-- /Main Content -->
    </div>
    <!-- /HK Wrapper -->

    <!-- jQuery -->
    <script src="/vendors/jquery/dist/jquery.min.js"></script>
    <script src="/js/profile.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/vendors/popper.js/dist/umd/popper.min.js"></script>
    <script src="/vendors/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Slimscroll JavaScript -->
    <script src="/dist/js/jquery.slimscroll.js"></script>

    <!-- Fancy Dropdown JS -->
    <script src="/dist/js/dropdown-bootstrap-extended.js"></script>

    <!-- Owl JavaScript -->
    <script src="/vendors/owl.carousel/dist/owl.carousel.min.js"></script>

    <!-- FeatherIcons JavaScript -->
    <script src="/dist/js/feather.min.js"></script>

    <!-- Init JavaScript -->
    <script src="/dist/js/init.js"></script>
    <script src="/dist/js/login-data.js"></script>
  </body>
</html>
